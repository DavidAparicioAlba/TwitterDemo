<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp" android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginTop="52dp" android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/imageView"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginTop="80dp" android:visibility="visible" android:layout_marginStart="140dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" tools:ignore="MissingConstraints"
            android:layout_marginStart="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>